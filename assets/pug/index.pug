extends _layout

block vars
	- var array = {body_class:'home_page', layout_mod:'', sub_keywords:'',title_inner:'Home'}
block content_block
	+sub_header({
		mod: 'homepage_mod',
		bgImg: 'i/subheader-img.jpg',
		titleText: 'Organizarea turismului în România',
		subtitleText: 'Organizarea de excursii și excursii colective și individuale în România',
		btnText: 'Cele mai apropiate excursii'
	})
	section.section.second_mod.white_mod.bg_mod
		.section_bg_wrapper
			img.section_bg_img(src="i/section-bg.png" alt="")
		.content_wrapper
			.section_head
				h2.section_title Cele mai apropiate excursii
			+servises_slider
			.slider_bottom
				.slider_controller
					.arrow_prev
						i.icon_left
					.arrow_next
						i.icon_right
				.bottom_wrapper
					a.button.default_mod.big_mod(href="#") Du-te la director
			.gallery_wrapper
				.section_head
					h2.section_title Galerie
				.gallery_grid_wrapper
					.grid_item.item_1
						img.galery_img(src="i/foto1.jpg" alt="")
					.grid_item.item_2
						img.galery_img(src="i/foto2.jpg" alt="")
					.grid_item.item_3
						img.galery_img(src="i/foto3.jpg" alt="")
					.grid_item.item_4
						img.galery_img(src="i/foto4.jpg" alt="")
					.grid_item.item_5
						img.galery_img(src="i/foto5.jpg" alt="")
					.grid_item.item_6
						img.galery_img(src="i/foto6.jpg" alt="")
				.bottom_wrapper
					a.button.default_mod.big_mod(href="#") Vedeți toate fotografiile